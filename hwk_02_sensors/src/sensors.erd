// Description: An ERD for Sensors

erdiagram sensors
notation = crowsfoot

entity Sensors { 
    name
}

entity Types { 
   name
}

entity Manufacturers { 
    name
}

entity Measurements { 
   name
}

entity Readings {
    name 
}

relationship Use {
    Sensors [0..1] -> Types [1..1]
}

relationship Possess {
    Sensors [1..1] -> Measurements [1..N]
}

relationship Builds {
    Sensors [0..N] -> Manufacturers [1..1]
}

relationship Records {
    Measurements [1..1] -> Readings [0..N]
}
